# ==================== КОНФИГУРАЦИЯ MEGA ARBITRAGE BOT ====================
# Этот файл содержит все настройки для бота
# Скопируйте его в .env и заполните своими данными

# ==================== РЕЖИМ ТОРГОВЛИ ====================
# Включить торговлю (true/false)
TRADING_ENABLED=false

# Бумажная торговля (true) или реальная (false)
PAPER_TRADING=true

# Стартовый баланс для бумажной торговли
PAPER_START_BALANCE_USD=10000

# ==================== API КЛЮЧИ ====================
# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# MEXC
MEXC_API_KEY=
MEXC_API_SECRET=

# Bybit
BYBIT_API_KEY=
BYBIT_API_SECRET=

# OKX
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=

# KuCoin
KUCOIN_API_KEY=
KUCOIN_API_SECRET=
KUCOIN_PASSPHRASE=

# ==================== РАЗМЕРЫ ПОЗИЦИЙ ====================
# Размер позиции по умолчанию (USD)
POSITION_SIZE_USD=100

# Максимальный размер позиции (USD)
MAX_POSITION_SIZE_USD=1000

# Минимальный размер позиции (USD)
MIN_POSITION_SIZE_USD=20

# ==================== РИСК-МЕНЕДЖМЕНТ ====================
# Максимальные потери в день (USD)
MAX_DAILY_LOSS_USD=200

# Максимальные потери в час (USD)
MAX_HOURLY_LOSS_USD=50

# Максимальное количество одновременных сделок
MAX_CONCURRENT_TRADES=5

# Минимальный баланс аккаунта (USD)
MIN_ACCOUNT_BALANCE_USD=500

# Stop-loss в процентах
STOP_LOSS_PERCENT=2.0

# Take-profit в процентах
TAKE_PROFIT_PERCENT=1.0

# Максимальный слиппедж в процентах
MAX_SLIPPAGE_PERCENT=0.5

# ==================== ИСПОЛНЕНИЕ ОРДЕРОВ ====================
# Таймаут ордера (мс)
ORDER_TIMEOUT_MS=3000

# Таймаут исполнения (мс)
FILL_TIMEOUT_MS=5000

# Максимальное количество попыток размещения ордера
MAX_ORDER_RETRIES=3

# ==================== ПРОКСИ (для обхода геоблокировки) ====================
# HTTP прокси
HTTP_PROXY=

# HTTPS прокси
HTTPS_PROXY=

# ==================== ЛОГИРОВАНИЕ ====================
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/mega_arbitrage_bot.log

# ==================== УВЕДОМЛЕНИЯ ====================
# Telegram бот токен (опционально)
TELEGRAM_BOT_TOKEN=

# Telegram chat ID (опционально)
TELEGRAM_CHAT_ID=

# Минимальная прибыль для уведомления (%)
NOTIFICATION_MIN_PROFIT=0.5
